#! /usr/bin/env python
# encoding: utf-8

src = [
'Balistica.vala',
'CmdHandler.vala',
'Miller.vala',
'Greenhill.vala',
]

conversion = [
'conversion/Angle.vala',
'conversion/Temperature.vala',
]

lib_balistica = [
'lib-balistica/Atmosphere.vala',
]

app = bld.program(
        target = 'balistica',
        vapi_dirs = '../vapi',
        threading = True,
        uselib = 'GLIB',
        packages = 'glib-2.0 config',
        source = src + conversion + lib_balistica
)

